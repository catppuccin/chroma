  version: "2.4.0"
  matrix:
    - flavor
    - variant: ["xml", "css"]
  filename: "dist/{{ flavor.identifier }}-chroma-style.{{ variant }}"
  hex_format: "#{{r}}{{g}}{{b}}{{z}}"
