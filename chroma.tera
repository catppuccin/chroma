  - name: NameEntity
    class: ni
    color: text
  - name: NameException
    class: ne
    color: yellow
  - name: NameFunction
    class: nf
    color: blue
  - name: NameFunctionMagic
    class: fm
    color: blue
  - name: NameLabel
    class: nl
    color: teal
    italic: true
  - name: NameNamespace
    class: nn
    color: text
  - name: NameProperty
    class: py
    color: peach
  - name: NameTag
    class: nt
    color: blue
  - name: NameVariable
    class: nv
    color: text
    italic: true
  - name: NameVariableClass
    class: vc
    color: yellow
    italic: true
  - name: NameVariableGlobal
    class: vg
    color: text
    italic: true
  - name: NameVariableInstance
    class: vi
    color: text
    italic: true
  - name: NameVariableMagic
    class: vm
    color: rosewater
  - name: NameAttribute
    class: na
    color: green
  - name: NameBuiltin
    class: nb
    color: red
    italic: true
  - name: NameBuiltinPseudo
    class: bp
    color: red
  - name: NameOther
    class: nx
    color: text
  - name: Literal
    class: l
    color: text
  - name: LiteralDate
    class: ld
    color: text
  - name: LiteralString
    class: s
    color: green
  - name: LiteralStringChar
    class: sc
    color: green
  - name: LiteralStringSingle
    class: s1
    color: green
  - name: LiteralStringDouble
    class: s2
    color: green
  - name: LiteralStringBacktick
    class: sb
    color: green
  - name: LiteralStringOther
    class: sx
    color: green
  - name: LiteralStringSymbol
    class: ss
    color: green
  - name: LiteralStringInterpol
    class: si
    color: green
  - name: LiteralStringAffix
    class: sa
    color: red
  - name: LiteralStringDelimiter
    class: dl
    color: blue
  - name: LiteralStringEscape
    class: se
    color: pink
  - name: LiteralStringRegex
    class: sr
    color: pink
  - name: LiteralStringDoc
    class: sd
    color: green
  - name: LiteralStringHeredoc
    class: sh
    color: green
  - name: LiteralNumber
    class: m
    color: peach
  - name: LiteralNumberBin
    class: mb
    color: peach
  - name: LiteralNumberHex
    class: mh
    color: peach
  - name: LiteralNumberInteger
    class: mi
    color: peach
  - name: LiteralNumberFloat
    class: mf
    color: peach
  - name: LiteralNumberIntegerLong
